<Application x:Class="Chopi.DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chopi.DesktopApp"
             ShutdownMode="OnLastWindowClose">
    
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Dictionaries/Fonts.xaml"/>
                
                <!-- Styles -->
                <ResourceDictionary Source="Resources/Styles/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
